rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Travel data - authenticated users can read all, but only write their own
    match /travels/{travelId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Reviews - authenticated users can read all, but only write their own
    match /reviews/{reviewId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Places - authenticated users can read all
    match /places/{placeId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow authenticated users to add places
    }
  }
}
